<!doctype html>
<html>
<head>

<style>
	.full, body {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
	}
	body {
		background-color: #000;
		text-align: center;
		overflow: hidden;
	}

	.glow-sphere-snes {
		display: inline-block;
		width: 500px;
		height: 500px;
		border-radius: 50%;
		box-shadow:
			inset 0 0 150px #fff,

			inset 20px 0 20px #0f0,    /* left, green */
			inset -20px 0 20px #f00,   /* right, red */
			inset 0 20px 20px #00f,    /* top, blue */
			inset 0 -20px 20px #ff0,   /* bottom, yellow */

			0 0 50px #fff,      /* outer white */
			-20px 0 80px #0f0,  /* left, green */
			20px 0 80px #f00,   /* right, red */
			0 -20px 80px #00f,  /* top, blue */
			0 20px 80px #ff0;

	}

	.glow-sphere-snes {
		display: inline-block;
		width: 500px;
		height: 500px;
		border-radius: 50%;
		box-shadow:
			inset 0 0 150px #fff,

			inset 20px 0 20px #0f0,    /* left, green */
			inset -20px 0 20px #f00,   /* right, red */
			inset 0 20px 20px #00f,    /* top, blue */
			inset 0 -20px 20px #ff0,   /* bottom, yellow */

			0 0 50px #fff,      /* outer white */
			-20px 0 80px #0f0,  /* left, green */
			20px 0 80px #f00,   /* right, red */
			0 -20px 80px #00f,  /* top, blue */
			0 20px 80px #ff0;

	}

	.pulsed-glow {
		animation: pulse 3s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite alternate;
    -webkit-transform: translate3d(0, 0, 0);
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
	}
	.pulsed-glow.s05 {
		animation: pulse 5s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite alternate;
	}
	.pulsed-glow.s07 {
		animation: pulse 7s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite alternate;
	}
	@keyframes pulse {
		0% {
			box-shadow: none;
		}
	}

	/* durations */
	.s05 .inhale {
		animation: fade_in_inhale 10s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite;
	}
	.s07 .inhale {
		animation: fade_in_inhale 14s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite;
	}
	.s05 .exhale {
		animation: fade_in_exhale 10s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite;
	}
	.s07 .exhale {
		animation: fade_in_exhale 14s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite;
	}

	.inhale {
		width: 100%;
		height: 100%;
		position: relative;
		top: 50px;
		opacity: 0;
		animation: fade_in_inhale 6s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite;
    -webkit-transform: translate3d(0, 0, 0);
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
	}
	@keyframes fade_in_inhale {
		0% {
			top: 50px;
			opacity: 0;
		}
		40% {
			top: 0;
			opacity: 1;
		}
		50% {
			opacity: 0;
		}
		100% {
			top: 50px;
			opacity: 0;
		}
	}
	@keyframes fade_in_exhale {
		0% {
			opacity: 0;
		}
		40% {
			top: -50px;
			opacity: 0;
		}
		90% {
			top: 0;
			opacity: 1;
		}
		100% {
			top: 0;
			opacity: 0;
		}
	}
	.exhale {
		width: 100%;
		height: 100%;
		position: relative;
		top: -50px;
		opacity: 0;
		animation: fade_in_exhale 6s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite;
    -webkit-transform: translate3d(0, 0, 0);
    -webkit-backface-visibility: hidden;
    -webkit-perspective: 1000;
	}

	.glow-text {
		text-shadow:
			0 0 12px #fff,
			0 0 36px #fff;
	}
	.simple-sphere {
		border-radius: 50%;
		opacity: 0.3;
		border: 10px solid #FFF;
		width: 400px;
		height: 400px;
	}
	.simple-sphere-pulse {
		border-radius: 50%;
		border: 10px solid #FFF;
		width: 400px;
		height: 400px;
		animation: sphere_scale 5s cubic-bezier(0.445, 0.050, 0.550, 0.950) infinite alternate;
	}

	@keyframes sphere_scale {
		0% {
			transform: scale3d(1, 1, 1);
		}
		100% {
			transform: scale3d(1.5, 1.5, 1);
		}
	}
	.exhale-container, .inhale-container {
		position: absolute;
		top: 20%;
		bottom: 20%;
		left: 20%;
		right: 20%;
	}
</style>

</head>
<body>

	<div class="full"><div class="centered s05 simple-sphere"></div></div>
	<div class="full"><div class="centered s05 simple-sphere-pulse"></div></div>

	<div class="full s05">
		<div class="inhale-container"><div class="inhale"><div class="glow-text">in</div></div></div>
		<div class="exhale-container"><div class="exhale"><div class="glow-text">out</div></div></div>
	</div>

	<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
	<script src="https://rawgit.com/DanielHoffmann/jquery-bigtext/master/jquery-bigtext.js"></script>
	<script>

		function parseQuery(){
			// http://stackoverflow.com/questions/901115/how-can-i-get-query-string-values-in-javascript
			var qd = {};
			location.search.substr(1).split("&").forEach(function(item) {
				var s = item.split("="),
					k = s[0],
					v = s[1] && decodeURIComponent(s[1]);
					(k in qd) ? qd[k].push(v) : qd[k] = [v]
			});
			return qd;
		}

		var query = parseQuery();
		if( query.hasOwnProperty('inhale') ){
			$('.inhale').children().html( query.inhale );
		}
		if( query.hasOwnProperty('exhale') ){
			$('.exhale').children().html( query.exhale );
		}

		// https://github.com/DanielHoffmann/jquery-bigtext
		$(".centered").bigText({});
		$(".glow-text").bigText({
			fontSizeFactor: 0.3
    });

	</script>
</body>
</html>
